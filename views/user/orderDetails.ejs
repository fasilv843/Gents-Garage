<%- include('../partials/head.ejs') %>
<style>
    .card {
        z-index: 0;
    }

    .top {
        padding-top: 40px;
        padding-left: 13% !important;
        padding-right: 13% !important;
    }

    /* Icon progressbar */

    #progressbar {
        margin-bottom: 30px;
        overflow: hidden;
        color: #455a64;
        padding-left: 0;
        margin-top: 30px;
    }

    #progressbar li {
        list-style-type: none;
        /* font-size: 9px; */
        width: 25%;
        float: left;
        position: relative;
        /* font-weight: 400; */
    }

    #progressbar .step0::before {
        font-family: FontAwesome;
        content: '\f10c';
        color: #fff;
    }

    #progressbar li::before {
        width: 20px;
        height: 20px;
        line-height: 20px;
        display: block;
        font-size: 10px;
        background: #c5cae9;
        border-radius: 50%;
        margin: auto;
        padding: 0;
    }

    /* Progressbar connector */
    #progressbar li::after {
        content: '';
        width: 100%;
        height: 4px;
        background-color: #c5cae9;
        position: absolute;
        top: 8px;
        left: 0;
        z-index: -1;
    }

    #progressbar li:last-child::after {
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        position: absolute;
        left: -50%;
    }

    #progressbar li:nth-child(2)::after,
    #progressbar li:nth-child(3)::after {
        left: -50%;
    }

    #progressbar li:first-child::after {
        border-top-left-radius: 10px;
        border-bottom-right-radius: 10px;
        position: absolute;
        left: 50%;
    }

    /* Color number of the step and the connect tor before it */

    #progressbar li.active::before,
    #progressbar li.active::after {
        background-color: #0ac419;
    }

    #progressbar li.active::before {
        font-family: FontAwesome;
        content: '\f00c';
    }

    @media screen and (max-width: 992px) {
        .icon-content {
            width: 50%;
        }
    }
</style>
<%- include('../partials/userHeader.ejs') %>
<%- include('../partials/userBreadcrub.ejs') %>
    


<section>
    <div class="container">
        <div class="mt-5">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title">Delivery Address</h4>
                            <h6 class="card-text" style="font-size: 1.2rem;"><strong><%= orderData.deliveryAddress.userName %></strong></h6>
                            <span class="card-text">
                                <%= orderData.deliveryAddress.address %>
                            </span><br>
                            <% 
                            let location = orderData.deliveryAddress.town+' '+orderData.deliveryAddress.state+' '+orderData.deliveryAddress.zip
                            %>
                            <span><%= location %></span>
                            <div class="mt-2">
                                <h6><strong>Phone number</strong></h6>
                                <span><%= orderData.deliveryAddress.mobile %></span>
                            </div>
                        </div>
                        <% 
                        if(status == 4){
                            %>
                            <div class="col-md-4 d-flex mb-3 pt-2 justify-content-center align-items-center">
                                <a href="/downloadInvoice" class="btn btn-secondary">Invoice 
                                    <i class="bi bi-file-earmark-arrow-down"></i>
                                </a>
                            </div>
                            <%  
                        }else if(status < 4){
                            %>
                            <div class="col-md-4 d-flex mb-3 pt-2 justify-content-center align-items-center">
                                <span>You can download invoice after product delivered</span>
                            </div>
                            <%  
                        }

                        if(status < 4){
                            %>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                                <a href="/cancelOrder/<%= orderData._id %>?cancelledBy=user" class="btn btn-danger">Cancel Order</a>
                            </div>
                            <%  
                        }else if(status == 4){
                            %>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                                <a href="/returnOrder/<%= orderData._id %>" class="btn btn-warning">Return</a>
                            </div>
                            <% 
                        }else if(status == 5){
                            %>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                                <h4 style="color: red;">Order Cancelled</h4>
                            </div>
                            <% 
                        }else if(status == 6){
                            %>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                                <h4 style="color: red;">Order Cancelled By Admin</h4>
                            </div>
                            <% 
                        }else if(status > 6){
                            %>
                            <div class="col-md-2 d-flex justify-content-center align-items-center">
                                <h4 style="color: red;"><%= orderData.status %></h4>
                            </div>
                            <% 
                        }
                        %>

                    </div>
                </div>
            </div>

            <% 
            if(status <= 4){
                %>
                <div class="card pb-3">
                    <div class="text-center mt-3">
                        <h4 class="card-title">Order Status</h4>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <ul id="progressbar" class="text-center">
                                <li class="<% if(status >= 1){ %>  active <% } %> step0">Order Confirmed </li>
                                <li class="<% if(status >= 2){ %>  active <% } %> step0">Shipped</li>
                                <li class="<% if(status >= 3){ %>  active <% } %> step0">Out for delivery</li>
                                <li class="<% if(status >= 4){ %>  active <% } %> step0">Delivered</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <%  
            }
            %>

            <!-- prods -->
            <div class="row mt-4">
                <% 
                for(const pdt of orderData.products){
                    %>
                        <div class="col-sm-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <div class="mx-3">
                                            <img src="/productImages/<%= pdt.productId.images[0] %>"
                                                class="img-fluid" alt="" width="120rem">
                                        </div>
                                        <div>
                                            <h4 class="card-title"><%= pdt.productName %></h4>
                                            <!-- <span class="card-text" style="color: rgb(99, 99, 99);">Size: M</span><br> -->
                                            <span class="card-text" style="color: rgb(99, 99, 99);">Quantity : <%= pdt.quantity %></span>
                                            <h5 class="card-title mt-2">â‚¹ <%= pdt.productPrice %></h5>
        
                                        </div>
                                    </div>
        
                                </div>
                            </div>
                        </div>
                    <%  
                }
                %>
            </div>





        </div>
    </div>
</section>


    
