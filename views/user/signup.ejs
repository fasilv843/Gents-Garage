<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-sm-12">
                    <div class="card shadow-2-strong">
                        <div class=" p-5 ">
                            <div class="text-center">
                                <h3 class="mb-3">SIGN UP</h3>
                               
                            </div>
                            <form action="/signup" method="post">


                                <div class="form-outline mb-3 row ">
                                    <div class=" col-md-6 col-12 mb-3">
                                        <label class="form-label" for="fname">First Name</label>
                                        <input type="text" id="fname" class="form-control form-control-md rounded-0"
                                        placeholder="Enter first name" name="fname" required/>
                                        <small id="fnameErr" class="error"></small>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label class="form-label" for="lname">Last Name</label>
                                        <input type="text" id="lname" class="form-control form-control-md rounded-0" placeholder="Enter last name" name="lname" required/>
                                        <small id="lnameErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="form-outline mb-3 row">
                                    <div class=" col-md-6 col-12 mb-3">
                                        <label class="form-label" for="mobile">Mobile</label>
                                        <input type="number" id="mobile"
                                            class="form-control form-control-md rounded-0" placeholder="Enter Mobile No." name="mobile" required/>
                                            <small id="mobileErr" class="error"></small>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label class="form-label" for="email">Email</label>
                                        <input type="email" id="email" class="form-control form-control-md rounded-0" placeholder="Enter email" name="email" required/>
                                        <small id="emailErr" class="error"></small>                                     
                                    </div>
                                </div>
                                <div class="form-outline mb-3 row">
                                    <div class=" col-md-6 col-12 mb-3">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" id="password"
                                            class="form-control form-control-md rounded-0" placeholder="Enter your password" name="password" required/>
                                            <small id="passwordErr" class="error"></small>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label class="form-label" for="confirmPassword">Confirm Password</label>
                                        <input type="password" id="confirmPassword"
                                            class="form-control form-control-md rounded-0" placeholder="Confirm Password" name="confirmPassword"  required/>
                                            <small id="confirmPasswordErr" class="error"></small>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-dark btn-md rounded-pill px-5 py-2 login-btn" type="submit" onclick="return validateSignUp()">SIGN UP</button>
                                    <p><%= locals.message?message:'' %></p>
                                    <div class="mt-2">
                                        <p>Already registered ? <a href="/login">Login</a></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/validations.js"></script>

